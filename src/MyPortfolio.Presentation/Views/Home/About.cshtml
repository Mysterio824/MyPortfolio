@model MyPortfolio.Application.DTOs.PersonalInfoDto
@{
    ViewData["Title"] = "About Me";
}

<div class="container">
    <h1 class="mb-4">About Me</h1>
    
    <div class="row mb-5">
        <div class="col-md-4 text-center">
            <img src="@(string.IsNullOrEmpty(Model.ProfilePictureUrl) ? "/images/profile-placeholder.jpg" : Model.ProfilePictureUrl)" 
                 alt="Profile Picture" class="rounded-circle img-fluid mb-3" style="max-width: 250px;">
            <h2>@Model.Name</h2>
            <h5 class="text-muted">@Model.Title</h5>
            <div class="mt-3">
                <a href="@Model.LinkedInUrl" target="_blank" class="me-2 text-decoration-none">
                    <i class="bi bi-linkedin fs-4"></i>
                </a>
                <a href="@Model.GitHubUrl" target="_blank" class="me-2 text-decoration-none">
                    <i class="bi bi-github fs-4"></i>
                </a>
                <a href="mailto:@Model.Email" class="text-decoration-none">
                    <i class="bi bi-envelope fs-4"></i>
                </a>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="card-title">Professional Summary</h3>
                    <p class="card-text lead">@Model.Summary</p>
                </div>
            </div>
            
            <div class="mt-4">
                <h3>Skills</h3>
                <div class="d-flex flex-wrap gap-2 mt-3">
                    @foreach (var skill in Model.Skills)
                    {
                        <span class="badge bg-primary p-2">@skill</span>
                    }
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-5">
        <div class="col-md-6">
            <h3 class="mb-4">Work Experience</h3>
            @foreach (var experience in Model.Experiences)
            {
                <div class="card mb-3 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@experience.Position</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@experience.Company</h6>
                        <p class="card-text text-muted small">@experience.Duration</p>
                        <p class="card-text">@experience.Description</p>
                    </div>
                </div>
            }
        </div>
        
        <div class="col-md-6">
            <h3 class="mb-4">Education</h3>
            @foreach (var education in Model.Education)
            {
                <div class="card mb-3 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@education.Degree</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@education.Institution</h6>
                        <p class="card-text text-muted small">@education.Duration</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div> 